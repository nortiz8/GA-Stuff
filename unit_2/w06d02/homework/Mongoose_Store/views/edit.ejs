<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Edit Product</title>
  </head>
  <body>
    <h1>Edit Product</h1>
    <form action="/store/<%=product.id%>?_method=PUT"" method="POST">
      Product Name:
      <input type="text" name="name" value="<%=product.name%>" /><br />
      Product Description:
      <input
        type="text"
        name="description"
        value="<%=product.description%>"
      /><br />
      Product Image:
      <input type="text" name="img" value="<%=product.img%>" /><br />
      Product Price:
      <input type="number" name="price" value="<%=product.price%>" /><br />
      Product Quantity:
      <input type="number" name="qty" value="<%=product.qty%>" /><br />
      <input type="submit" name="" value="Submit" />
    </form>
    <h5><a href="/store">Back to Store</a></h5>
  </body>
</html>
